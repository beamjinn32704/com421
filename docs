#!/bin/bash

# Define the directory containing the wallpapers
WALLPAPER_DIR="~/Pictures/"

# Make sure we can connect to the desktop environment
export DISPLAY=":0"
export DBUS_SESSION_BUS_ADDRESS="unix:path=/run/user/$(id -u)/bus"

cd ~/Pictures
picName = 22JOURNEYS1_SPAN-superJumbo.jpg
rm -rf picName* 2> /tmp/std_error
wget https://static01.nyt.com/images/2012/04/22/travel/22JOURNEYS1_SPAN/22JOURNEYS1_SPAN-superJumbo.jpg

# Determine the current color scheme to decide which property to set
COLOR_SCHEME=$(gsettings get org.gnome.desktop.interface color-scheme)

# Change the wallpaper based on the color scheme
if [ "$COLOR_SCHEME" = "'prefer-dark'" ]; then
    # Set the wallpaper for dark theme
    gsettings set org.gnome.desktop.background picture-uri-dark ~/Pictures/picName
else
    # Set the wallpaper for light theme
    gsettings set org.gnome.desktop.background picture-uri ~/Pictures/picName
fi
